// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums for Prompts System
enum UserRole {
  USER
  STAFF
  ADMIN
}

enum PromptStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum AIModel {
  CHATGPT_4
  CHATGPT_35
  CLAUDE_OPUS
  CLAUDE_SONNET
  GEMINI_2_FLASH
  GEMINI_15_PRO
  UNIVERSAL
}

// Model for lead capture (email list)
model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  source    String?  // Where the lead came from (landing page, etc)
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
  @@map("leads")
}

// Model for users who purchased
model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String
  phone         String?
  password      String?    // Hashed password for credentials auth
  emailVerified DateTime?
  role          UserRole   @default(USER)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  purchases     Purchase[]

  // Prompts System relationships
  createdPrompts Prompt[]      @relation("PromptCreator")
  promptUsage    PromptUsage[]

  @@index([email])
  @@map("users")
}

// Model for purchases
model Purchase {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId       String   // "ebook-masterclass" or future products
  productName     String
  amount          Float    // Amount in BRL
  currency        String   @default("BRL")
  status          String   // "pending", "approved", "rejected", "refunded"
  paymentMethod   String?  // "credit_card", "pix", "boleto"
  installments    Int      @default(1)
  mercadoPagoId   String?  @unique // Mercado Pago payment ID
  mercadoPagoData Json?    // Full Mercado Pago response
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([mercadoPagoId])
  @@map("purchases")
}

// Model for tracking payment webhooks from Mercado Pago
model WebhookEvent {
  id            String   @id @default(cuid())
  event         String   // "payment.created", "payment.updated", etc
  paymentId     String?
  merchantOrder String?
  rawData       Json     // Full webhook payload
  processed     Boolean  @default(false)
  processedAt   DateTime?
  createdAt     DateTime @default(now())

  @@index([paymentId])
  @@index([processed])
  @@index([createdAt])
  @@map("webhook_events")
}

// Model for analytics and tracking
model PageView {
  id         String   @id @default(cuid())
  path       String
  referrer   String?
  ipAddress  String?
  userAgent  String?
  utmSource  String?
  utmMedium  String?
  utmCampaign String?
  createdAt  DateTime @default(now())

  @@index([path])
  @@index([createdAt])
  @@index([utmSource])
  @@map("page_views")
}

// ============================================
// PROMPTS REPOSITORY SYSTEM
// ============================================

// Main prompt model with hybrid nomenclature (slug + alias)
model Prompt {
  id String @id @default(cuid())

  // Nomenclatura híbrida
  slug  String @unique // URL-friendly: "criar-avatar-profundo"
  alias String @unique // Human-friendly: "AVATAR-01"
  title String

  description String @db.Text

  // Categorização
  category   PromptCategory? @relation(fields: [categoryId], references: [id])
  categoryId String?
  tags       PromptTag[]

  // Metadata
  sourceChapter String? // e.g., "cap-07"
  status        PromptStatus @default(DRAFT)
  creatorId     String
  creator       User         @relation("PromptCreator", fields: [creatorId], references: [id])

  // Versões multi-modelo
  versions PromptVersion[]

  // Placeholders (JSON)
  placeholders Json @default("[]")

  // Analytics
  usage     PromptUsage[]
  viewCount Int           @default(0)
  copyCount Int           @default(0)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  @@index([slug])
  @@index([alias])
  @@index([status])
  @@map("prompts")
}

// Versões de prompts por modelo de IA
model PromptVersion {
  id       String @id @default(cuid())
  promptId String
  prompt   Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)

  version       String? // e.g., "v1", "v2" (optional)
  modelTag      String // e.g., "chatgpt-4", "claude-opus", "universal"
  content       String  @db.Text
  isRecommended Boolean @default(false)
  notes         String? @db.Text

  createdAt DateTime @default(now())

  @@unique([promptId, modelTag, version])
  @@index([promptId])
  @@map("prompt_versions")
}

// Categorias de prompts
model PromptCategory {
  id          String  @id @default(cuid())
  name        String  @unique
  slug        String  @unique
  description String? @db.Text
  icon        String? // emoji ou icon name
  order       Int     @default(0)

  prompts Prompt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("prompt_categories")
}

// Tags para prompts
model PromptTag {
  id   String @id @default(cuid())
  name String @unique
  slug String @unique

  prompts Prompt[]

  createdAt DateTime @default(now())

  @@map("prompt_tags")
}

// Rastreamento de uso de prompts
model PromptUsage {
  id String @id @default(cuid())

  promptId String
  prompt   Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  modelTag String
  version  String?

  createdAt DateTime @default(now())

  @@index([promptId])
  @@index([userId])
  @@map("prompt_usage")
}
